<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Dialog
        id="idForgotPassword_cs"
        resizable="true"
        draggable="true"
        title="Forgot Password"
    >
        <form:SimpleForm
            id="idSimpleformForgotPassword_cs"
            editable="true"
            layout="ResponsiveGridLayout"
        >
            <VBox
                id="idForgotpasswordVbox_cs"
                
            >
                <HBox id="idForgotpasswordHbox1_cs">
                    <Label
                        id="userIdLabelForgotPassword_cs"
                        class="sapUiTinyMarginTop"
                        text="User Id"
                        width="120px"
                    />

                    <Input
                        id="UserIdInputForgotPassword_cs"
                        placeholder="User ID"
                    />
                </HBox>
                <HBox id="idForgotpasswordHbox2_cs">
                    <Label
                        id="LabelMobNoForgotPassword_cs"
                        text="Mobile Number"
                        class="sapUiTinyMarginTop"
                        width="120px"
                    />

                    <Input
                        id="InputMobNoForgotPassword_cs"
                        type="Tel"
                        placeholder="1234567890"
                    />
                </HBox>
                <HBox id="idForgotpasswordHbox3_cs">
                    <Label
                        id="LabelNewPasswordForgotPassword_cs"
                        text="New Password"
                        class="sapUiTinyMarginTop"
                        width="120px"
                    />

                    <Input
                        id="InputNewPasswordForgotPassword_cs"
                        type="Text"
                        placeholder="New Password"
                    />
                </HBox>
                <HBox id="idForgotpasswordHbox5_cs">
                    <Label
                        id="LabelconfirmPasswordForgotPassword_cs"
                        text="confirm Password"
                        class="sapUiTinyMarginTop"
                        width="120px"
                    />

                    <Input
                        id="InputconfirmPasswordForgotPassword_cs"
                        type="Text"
                        placeholder="confirm Password"
                    />
                </HBox>
                <VBox
                    id="idForgotpasswordVbox2_cs"
                    alignContent="Center"
                    alignItems="Center"
                    class="sapUiSmallMarginTop"
                >
                    <HBox id="idForgotpasswordHbox4_cs">
                        <Button
                            id="idSaveBtnForgotpassword_CS"
                            type="Emphasized"
                            text="Save"
                            press="onSaveBtnPressForgotPassword"
                            class="sapUiTinyMarginEnd"
                        />
                        <Button
                            id="idCancelBtnForgotpassword_CS"
                            type="Emphasized"
                            text="Cancel"
                            press="onCancelBtnPressForgotPassword"
                        />
                    </HBox>
                </VBox>
            </VBox>
        </form:SimpleForm>
    </Dialog>
</core:FragmentDefinition>
