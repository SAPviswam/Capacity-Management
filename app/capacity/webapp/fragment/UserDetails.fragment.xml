<core:FragmentDefinition
    xmlns:form="sap.ui.layout.form"
    xmlns:unified="sap.ui.unified"
    xmlns:vk="sap.ui.vk"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
>
    <Dialog
        id="idProfileDetailsDailogBox"
        title="Profile Details"
        class="userProfileDialog sapMPopover sapMIBar sapMHeader-CTX"
        contentWidth="25%"
        contentHeight="auto"
    >
        <customHeader>
            <Bar id="BarUserDetails_CMPage">
                <contentLeft>
                    <Title
                        id="idPersonaleUserDetails_CMPage"
                        text="Profile Detials:"
                    />
                </contentLeft>
                <contentRight>
                    <Button
                        id="iddeclineBtnUserDetails_CMPage"
                        icon="sap-icon://decline"
                        type="Transparent"
                        press="onPressDeclineProfileDetailsDailog_CM"
                        tooltip="Close"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <VBox
            id="idVBox1UserDetails_CMPage"
            class="profileCard"
        >
            <Avatar
                id="idImageAccontDetailsAvatar_CMPage"
                displayShape="Circle"
                displaySize="XL"
                class="profileAvatar"
            />
            <HBox id="idHBoxBtnsForDeleteUpdate">
                <Button
                    id="idBtnUploadImageforProfile_CMPage"
                    text="Upload"
                    icon="sap-icon://upload"
                    press="onPressUploadProfilePic_CMPage"
                    type="Transparent"
                    width="auto"
                />
                <Label
                    id="idEmptylabelforBtns_CMPage"
                    width="1rem"
                />
                <Button
                    id="idBtnEditDetailsforProfile_CMPage"
                    text="Edit"
                    icon="sap-icon://edit"
                    press="onPressEditProfileDetails_CMPage"
                    type="Transparent"
                    width="auto"
                />
                <Button
                    id="idBtnSaveProfileDetails_CMPage"
                    text="Save"
                    icon="sap-icon://save"
                    press="onPressSaveProfileDetails_CMPage"
                    type="Transparent"
                    visible="false"
                    width="auto"
                />
                <Label
                    id="idEmptylabelforBtns123_CMPage"
                    width="1rem"
                />
                <Button
                    id="idBtnDeleteImageforProfile_CMPage"
                    text="Remove"
                    icon="sap-icon://delete"
                    press="onPressDeleteProfilePic_CMPage"
                    type="Transparent"
                    width="auto"
                />
                <Button
                    id="idBtnCancelProfileDetails_CMPage"
                    text="Cancel"
                    icon="sap-icon://decline"
                    press="onPressCancelProfileDetails_CMPage"
                    type="Transparent"
                    visible="false"
                    width="auto"
                />
            </HBox>
            <VBox id="VBox2UserDetails_CMPage">
                <form:SimpleForm
                    id="idSimplformProfileDetails_CMPage"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    adjustLabelSpan="false"
                >
                    <HBox
                        id="idHBoxUserIDProfileDetails_CMPage"
                        alignContent="Center"
                    >
                        <Text
                            id="idResourceIDUserDetails_CMPage"
                            text="User ID:"
                            width="5rem"
                            class="profileDetailItem"
                        />
                        <Text
                            id="idInpuTextUsrIDUserDetails_CMPage"
                            text="{oUserModel>/oUserID}"
                            class="profileDetailItem"
                        />
                    </HBox>
                    <HBox
                        id="idHBoxNameProfileDetails_CMPage"
                        alignContent="Center"
                    >
                        <Text
                            id="idNameUserDetails_CMPage"
                            text="Name:"
                            width="5rem"
                            class="profileDetailItem"
                        />
                        <Text
                            id="idInputTextResourceFirstname_CMPage"
                            text="{oUserModel>/fName}"
                            class="profileDetailItem"
                        />
                        <Text
                            id="idEmptyText01FL_CMPage"
                            width="0.3rem"
                        />
                        <Text
                            id="idInputTextResourceLastname_CMPage"
                            text="{oUserModel>/lName}"
                            class="profileDetailItem"
                        />
                        <Input
                            id="idFrontandInputFirstName_CMPage"
                            value="{oUserModel>/fName}"
                            visible="false"
                            width="5rem"
                        />
                        <Label
                            id="idEmptyLable02FL_CMPage"
                            width="0.5rem"
                        />
                        <Input
                            id="idFrontandInputLastName_CMPage"
                            value="{oUserModel>/lName}"
                            visible="false"
                            width="5rem"
                        />
                    </HBox>
                    <HBox
                        id="idHBoxMobileProfileDetails_CMPage"
                        alignContent="Center"
                    >
                        <Text
                            id="idMobileUserDetails_CMPage"
                            text="Mobile:"
                            width="5rem"
                            class="profileDetailItem"
                        />
                        <Text
                            id="idInputTextUserPhonenumber_CMPage"
                            text="{oUserModel>/Number}"
                            class="profileDetailItem"
                        />
                        <Input
                            id="idFrontandInputPhoneNumber_CMPage"
                            value="{oUserModel>/Number}"
                            visible="false"
                        />
                    </HBox>
                    <HBox
                        id="idHBoxEmialProfileDetails_CMPage"
                        alignContent="Center"
                    >
                        <Text
                            id="idEmailUserDetails_CMPage"
                            text="Email:"
                            width="5rem"
                            class="profileDetailItem"
                        />
                        <Text
                            id="idInputTextUserEmail_CMPage"
                            text="{oUserModel>/UserMail}"
                            class="profileDetailItem"
                        />
                        <Input
                            id="idFrontandInputEmail_CMPage"
                            value="{oUserModel>/UserMail}"
                            visible="false"
                        />
                    </HBox>
                </form:SimpleForm>
            </VBox>
        </VBox>
    </Dialog>
</core:FragmentDefinition>
