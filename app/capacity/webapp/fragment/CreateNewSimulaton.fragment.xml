<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Create Simulation" id="createSimulationDialog"   resizable="true"
        draggable="true">
        <VBox>
            <Text class="sapUiTinyMargin" text="Simulation Name:"/>
            <Input id="simulationInput" placeholder="Enter Simulation Name" />
        </VBox>
        <beginButton>
            <Button text="Submit" press="onSubmitSimulation"/>
        </beginButton>
        <endButton>
            <Button text="Close" press="onCloseDialogSimulate"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
