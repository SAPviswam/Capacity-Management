<mvc:View
    controllerName="com.app.capacity.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <App id="_IDGenApp1">
        <pages>
            <Page
                id="_IDGenPage"
                showHeader="false"
                class="sapUiContentPadding backgroundColour"
            >
                <content>
                    <HBox
                        id="_IDGenHB2ox"
                        width="100%"
                        justifyContent="SpaceBetween"
                        alignItems="Center"
                    >
                        <Image
                            id="id_GenImage1PageHome"
                            height="2.5rem"
                            class="sapUiTinyMarginBegin"
                            src="https://artihcus.com/assets/img/AG-logo.png"
                        />
                       
                        
                    </HBox>
                    <HBox
                        id="_IDGen33HBox2"
                        class="EntireHbox"
                        justifyContent="SpaceBetween"
                    >
                        <HBox
                            id="_IDG33enHBox3"
                            class="textHbox"
                        >
                            <Text
                                id="_IDGe33nText"
                                text="{i18n>Hi}"
                                class="Hi"
                            />
                            <VBox id="_IDGenV33Box">
                                <Label
                                    id="_IDG33enLabel"
                                    width="20%"
                                />
                                <Text
                                    id="_IDG44enText1"
                                    text="{i18n>Welcome}"
                                    class="welcome"
                                />
                                <Text
                                    id="_IDGenTeeext2"
                                    text="{i18n>Capacity}"
                                    class="capacityTitle"
                                />
                                <Text
                                    id="_IDGenTeeext3"
                                    text="{i18n>Management}"
                                    class="capacityTitle"
                                />
                            </VBox>
                        </HBox>
                        <HBox
                            id="_IDGen33HBox28"
                            justifyContent="Center"
                            alignItems="Center"
                            class="centered-up"
                        >
                            <!-- Centered Content Block -->
                            <VBox
                                id="_IDGenHBox"
                               
                                class="centered-up loginContainer sapUiLargeMarginTop"
                            >
                                <Avatar
                                    id="Avatar"
                                    class="sapUiMediumMarginTop"
                                    displaySize="L"
                                    backgroundColor="Accent6"
                                />
                                <VBox
                                    id="userIdHbox"
                                    class="sapUiSmallMarginTop"
                                >
                                    <Title
                                        id="userIdLabel"
                                        text="User Id"
                                    />
                                    <!-- User:  sap-icon://person-placeholder 
                                 Password: sap-icon://primary-key -->
                                    <Input
                                        id="_IDGenInput11"
                                        type="Text"
                                        placeholder="Enter userId"
                                        autocomplete="true"
                                    />
                                </VBox>
                                <VBox
                                    id="passwordHbox"
                                    class="sapUiSmallMarginTop"
                                >
                                    <Title
                                        id="passwordLabel"
                                        text="Password"
                                    />
                                    <Input
                                        id="_IDGenInput221"
                                        type="Password"
                                        placeholder="Enter Password"
                                        autocomplete="true"
                                    />
                                </VBox>
                                <HBox
                                    id="_IDGenHBox1"
                                    class="sapUiSmallMarginTop"
                                >
                                    <CheckBox
                                        id="_IDGenChe22ckBox"
                                        text="Auto Save"
                                        select="onSelectCheckBox"
                                        class="sapUiSmallMarginEnd"
                                    />
                                    <Link
                                        id="IDchan22gePassword"
                                        text="Forgot Password"
                                        press="onForgotPasswordPress"
                                        class="sapUiTinyMarginTop"
                                    />
                                </HBox>
                                <HBox class="sapUiTinyMarginTop">
                                    <Button
                                        id="_IDGenButt22n2"
                                        type="Emphasized"
                                        text="Login"
                                        press="onLoginBtnPressInLoginDialog"
                                        class="sapUiMediumMarginEnd"
                                    />
                                    <Button
                                        id="_IDG34enButton0"
                                        text="{i18n>SignupButton}"
                                        type="Emphasized"
                                        press="onSignup"
                                        class="sapUiMediumMarginBegin"
                                    />
                                </HBox>
                            </VBox>
                        </HBox>
                        <!-- <HBox id="_IDGenHBeeox4">
                            <Image
                                id="idImage"
                                class="sapUiLargeMarginTop"
                                src="Image/logintruck.png"
                                height="500px"
                                width="600px"
                            />
                        </HBox> -->
                    
                    </HBox>
                    <Text
                        id="_IDGenTeeext4"
                        width="40%"
                        text="&quot;Let's create something amazing together by ArtihcusÂ©.&quot;"
                        class="quoteText"
                    />

                       
                    <!--  <Text text="Together.&quot;" class="quoteText"/>  -->
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
