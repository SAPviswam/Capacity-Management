<mvc:View
    controllerName="com.app.capacity.controller.MainPage"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns:vk="sap.ui.vk"
    xmlns:u="sap.ui.unified"
    xmlns:smartform="sap.ui.comp.smartform"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    height="100%"
    xmlns:filterBar="sap.fe.macros.filterBar"
    xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
    xmlns:smarttable="sap.ui.comp.smarttable"
>
    <tnt:ToolPage
        id="idtoolPage"
        class="backgroundColour"
    >
        <!-- Tool Page heder -->
        <tnt:header>
            <tnt:ToolHeader
                id="idToolHeader"
                class="backgroundColour"
            >
                <tnt:content>
                    <HBox
                        id="IdHBoxForBurgerIcon"
                        width="100%"
                        alignItems="Center"
                        class="backgroundColour"
                    >
                        <!-- Button positioned on the left -->
                        <Button
                            id="idForBugerSymbol"
                            icon="sap-icon://menu2"
                            press=".onCollapseExpandPress"
                            class="sapUiLargeMarginEnd"
                        />
                        <Image
                            id="idForImage"
                            height="1.5rem"
                            class="sapUiTinyMarginBegin"
                            src="https://www.daikin.com/-/media/Project/Daikin/daikin_com/dg_common/images/logo_daikin-png.png"
                        />
                        <!-- Title centered in the remaining space -->
                        <HBox
                            id="idHBoxForPageTitle"
                            justifyContent="Center"
                            width="100%"
                        >
                            <Title
                                id="idPageTitle"
                                level="Auto"
                                titleStyle="H1"
                                text="Capacity Management"
                                class="capacityManagement"
                            />
                        </HBox>
                        <Avatar
                            id="idImageMainAvatar_CapacityManagement"
                            displaySize="XS"
                            press="onAvatarPress_CapacityManagement"
                            tooltip="Profile"
                        >
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    id="idOverflowToolbarLayoutData_CM"
                                    priority="High"
                                />
                            </layoutData>
                        </Avatar>
                    </HBox>
                </tnt:content>
            </tnt:ToolHeader>
        </tnt:header>
        <!-- side content -->
        <tnt:sideContent>
            <tnt:SideNavigation
                class="backgroundColour"
                id="idSidenavigation"
                itemSelect="onItemSelect"
            >
                <tnt:NavigationList id="idnavigationList">
                    <tnt:NavigationListItem
                        id="idnavMasterRecords"
                        key="MasterRecords"
                        text="Master Records"
                        icon="sap-icon://database"
                    />

                    <tnt:NavigationListItem
                        id="idnavSimulation"
                        key="SimulationCreation"
                        text="Simulation Page"
                        icon="sap-icon://simulate"
                    />
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>
        <!-- Main Contents -->
        <tnt:mainContents>
            <NavContainer
                class="backgroundColour"
                id="idNavContainer"
                initialPage="idScrollConForMasterDetails"
            >
                <pages>
                    <!-- Master Details -->
                    <ScrollContainer
                        id="idScrollConForMasterDetails"
                        horizontal="false"
                        vertical="true"
                        height="100%"
                        width="100%"
                        class="sapUiContentPadding backgroundColour"
                    >
                        <IconTabBar
                            expanded="true"
                            expandable="false"
                            id="idIconTabBarForProductList"
                            backgroundDesign="Transparent"
                            class="backgroundColour iconTabBar"
                        >
                            <items>
                                <IconTabFilter
                                    id="idIcontabFilterforProductsTable"
                                    visible="true"
                                    key="info"
                                    interactionMode="Auto"
                                    icon="sap-icon://product"
                                    iconColor="Neutral"
                                    text="Product List"
                                    class="backgroundColour"
                                >
                                    <VBox
                                        id="idVBoxForModelsTable"
                                        width="80%"
                                    >
                                        <!-- Smart Filters -->
                                        <smartfilterbar:SmartFilterBar
                                            id="idSmartFiltersForModel"
                                            filterBarExpanded="true"
                                            entitySet="Materials"
                                        >
                                            <smartfilterbar:controlConfiguration
                                            >
                                                <smartfilterbar:ControlConfiguration
                                                    visibleInAdvancedArea="true"
                                                    id="idModelControl"
                                                    label="Model"
                                                    key="model"
                                                />
                                                <smartfilterbar:ControlConfiguration
                                                    visibleInAdvancedArea="true"
                                                    id="idDescriptionControl"
                                                    label="Description"
                                                    key="description"
                                                />
                                                <smartfilterbar:ControlConfiguration
                                                    visibleInAdvancedArea="true"
                                                    id="idCategoryControl"
                                                    label="Material Category"
                                                    key="mCategory"
                                                />
                                            </smartfilterbar:controlConfiguration>
                                        </smartfilterbar:SmartFilterBar>
                                        <!-- Smart Table -->
                                        <smarttable:SmartTable
                                            id="idModelsSmartTable"
                                            header="Models/Products"
                                            headerLevel="H6"
                                            showRowCount="false"
                                            showFullScreenButton="true"
                                            enableAutoBinding="true"
                                            enableExport="true"
                                            tableType="ResponsiveTable"
                                            smartFilterId="idSmartFiltersForModel"
                                            entitySet="Materials"
                                        >
                                            <smarttable:customToolbar>
                                                <OverflowToolbar
                                                    id="idOverFlowForProducts"
                                                >
                                                    <ToolbarSpacer
                                                        id="idToolbarForProducts"
                                                    />

                                                    <MenuButton
                                                        id="idMaterialMenuBtn"
                                                        text="Actions"
                                                    >
                                                        <menu>
                                                            <Menu
                                                                id="idMaterialMenu"
                                                                itemSelected="onMenuAction"
                                                            >
                                                                <MenuItem
                                                                    id="idMaterialEditBtn"
                                                                    text="Edit"
                                                                    icon="sap-icon://edit"
                                                                    press="onModelEdit"
                                                                />
                                                                <!--                                                                <MenuItem
                                                                    id="idMaterialEditBtn"
                                                                    text="Edit"
                                                                    icon="sap-icon://edit"
                                                                    press="onPressEditInProductsTable"
                                                                /> -->
                                                                <MenuItem
                                                                    id="idMaterialDeleteBtn"
                                                                    text="Delete"
                                                                    icon="sap-icon://delete"
                                                                    press="onModelDelete"
                                                                />
                                                                <MenuItem
                                                                    id="idMaterialUploadBtn"
                                                                    text="Upload"
                                                                    icon="sap-icon://upload"
                                                                    press="onMaterialUploadbtn"
                                                                />
                                                            </Menu>
                                                        </menu>
                                                    </MenuButton>
                                                </OverflowToolbar>
                                            </smarttable:customToolbar>
                                            <Table
                                                id="idModelsTable"
                                                mode="MultiSelect"
                                                noDataText="No Models/Products Available"
                                                selectionChange="onModelChange"
                                            />
                                        </smarttable:SmartTable>
                                    </VBox>
                                </IconTabFilter>
                                <IconTabFilter
                                    id="idIconTabForAddProduct"
                                    visible="true"
                                    key="info"
                                    icon="sap-icon://add-product"
                                    interactionMode="Auto"
                                    iconColor="Neutral"
                                    text="Add Product"
                                    class="backgroundColour"
                                >
                                    <HBox
                                        id="idHBoxForCreateModel"
                                        class="backgroundColour"
                                        width="80%"
                                    >
                                        <form:SimpleForm
                                            id="idForModelCreationForm"
                                            layout="ResponsiveGridLayout"
                                            backgroundDesign="Transparent"
                                            width="100%"
                                        >
                                            <VBox
                                                id="idVBoxforModelCreation"
                                                visible="true"
                                            >
                                                <HBox id="idHboxForModelNum">
                                                    <Label
                                                        id="idLabelForModelNum"
                                                        text="Product Number:"
                                                        width="125px"
                                                        class="sapUiTinyMarginTop"
                                                    />
                                                    <Input
                                                        id="idInputForModelNum"
                                                        value="{CombinedModel>/Product/model}"
                                                        placeholder="Enter Productno"
                                                        class="customInput"
                                                        width="100%"
                                                    />
                                                </HBox>

                                                <HBox id="idHBoxForEAN">
                                                    <Label
                                                        id="idLabelForEAN"
                                                        text="EAN:"
                                                        width="125px"
                                                        class="sapUiTinyMarginTop"
                                                    />
                                                    <Input
                                                        id="idInputForEAN"
                                                        value="{CombinedModel>/Product/EAN}"
                                                        placeholder="Enter EAN"
                                                        class="customInput"
                                                        width="100%"
                                                    />
                                                </HBox>
                                                <HBox id="idHBoxForModelDesc">
                                                    <Label
                                                        id="idLabelForModelDesc"
                                                        text="Description:"
                                                        width="125px"
                                                        class="sapUiTinyMarginTop"
                                                    />
                                                    <Input
                                                        id="idInputForModelDesc"
                                                        value="{CombinedModel>/Product/description}"
                                                        placeholder="Enter Description"
                                                        class="customInput"
                                                        width="100%"
                                                        maxLength="200"
                                                    />
                                                </HBox>

                                                <HBox id="idHBoxForModelCat">
                                                    <Label
                                                        id="idLablelForModelCat"
                                                        text="Material Category:"
                                                        width="125px"
                                                        class="sapUiTinyMarginTop"
                                                    />
                                                    <Input
                                                        id="idInputForModelCat"
                                                        value="{CombinedModel>/Product/mCategory}"
                                                        placeholder="Material Category"
                                                        width="100%"
                                                        liveChange="ongetSAPPress"
                                                    />
                                                </HBox>

                                                <HBox id="idHBoxForModelLeng">
                                                    <Label
                                                        id="idLableForModelLeng"
                                                        text="Length:"
                                                        width="125px"
                                                        class="sapUiTinyMarginTop"
                                                    />
                                                    <Input
                                                        id="idInputForModelLeng"
                                                        value="{CombinedModel>/Product/length}"
                                                        placeholder="Enter Length"
                                                        width="100%"
                                                    />
                                                </HBox>

                                                <HBox id="idHBoxForModelWidth">
                                                    <Label
                                                        id="idLableForModelWidth"
                                                        text="Width:"
                                                        width="125px"
                                                        class="sapUiTinyMarginTop"
                                                    />
                                                    <Input
                                                        id="idInputForModelWidth"
                                                        value="{CombinedModel>/Product/width}"
                                                        placeholder="Enter Width"
                                                        maxLength="5"
                                                        width="100%"
                                                        editable="true"
                                                    />
                                                </HBox>

                                                <HBox id="idHBoxForModelHeight">
                                                    <Label
                                                        id="idLabelForModelHeight"
                                                        text="Height:"
                                                        width="125px"
                                                        class="sapUiTinyMarginTop"
                                                    />
                                                    <Input
                                                        id="idInputForModelHeight"
                                                        value="{CombinedModel>/Product/height}"
                                                        placeholder="Enter Height"
                                                        class="customInput"
                                                        width="100%"
                                                    />
                                                </HBox>

                                                <HBox id="idHBoxForModelQuan">
                                                    <Label
                                                        id="idLablelForModelQuan"
                                                        text="Quantity:"
                                                        width="125px"
                                                        class="sapUiTinyMarginTop"
                                                    />
                                                    <Input
                                                        id="idInputForModelQuan"
                                                        value="{CombinedModel>/Product/quantity}"
                                                        placeholder="Enter Quantity"
                                                        class="customInput"
                                                        width="100%"
                                                        maxLength="200"
                                                    />
                                                </HBox>

                                                <HBox id="idHBoxforModelUOM">
                                                    <Label
                                                        id="idLablelForModelUOM"
                                                        text="UOM:"
                                                        width="125px"
                                                        class="sapUiTinyMarginTop"
                                                    />
                                                    <Select
                                                        id="idForSelectModelLWHUOM"
                                                        width="174px"
                                                    >
                                                        <core:Item
                                                            id="idSelectUOM1"
                                                            key="Select"
                                                            text="Select"
                                                        />

                                                        <core:Item
                                                            id="idSelectUOM2"
                                                            key="M"
                                                            text="M"
                                                        />

                                                        <core:Item
                                                            id="idSelectUOM3"
                                                            key="CM"
                                                            text="CM"
                                                        />
                                                        <core:Item
                                                            id="idSelectUOM4"
                                                            key="mm"
                                                            text="mm"
                                                        />
                                                    </Select>
                                                </HBox>
                                                <HBox
                                                    id="idHBoxForModelNetWeight"
                                                >
                                                    <Label
                                                        id="idLablelForModelNetWeight"
                                                        text="Net Weight:"
                                                        width="125px"
                                                        class="sapUiTinyMarginTop"
                                                    />
                                                    <Input
                                                        id="idInputForModelNetWeight"
                                                        value="{CombinedModel>/Product/netWeight}"
                                                        placeholder="Enter Net Weight"
                                                        class="customInput"
                                                        width="100%"
                                                        maxLength="200"
                                                    />
                                                </HBox>
                                                <HBox
                                                    id="idHBoxForModelGrossWeight"
                                                >
                                                    <Label
                                                        id="idLablelForModelGrossWeight"
                                                        text="Gross Weight:"
                                                        width="125px"
                                                        class="sapUiTinyMarginTop"
                                                    />
                                                    <Input
                                                        id="idInputForModelGrossWeight"
                                                        value="{CombinedModel>/Product/grossWeight}"
                                                        placeholder="Enter Gross Weight"
                                                        class="customInput"
                                                        width="100%"
                                                        maxLength="200"
                                                    />
                                                </HBox>

                                                <HBox id="idHBoxForModelWeight">
                                                    <Label
                                                        id="idLablForModelWeight"
                                                        text="UOM:"
                                                        width="125px"
                                                        class="sapUiTinyMarginTop"
                                                    />

                                                    <Select
                                                        id="idSelectModelWeightUOM"
                                                        width="174px"
                                                    >
                                                        <items>
                                                            <core:Item
                                                                id="idModelWeightUOM1"
                                                                key="Select"
                                                                text="Select"
                                                            />
                                                            <core:Item
                                                                id="idModelWeightUOM2"
                                                                key="KG"
                                                                text="Kilograms"
                                                            />
                                                            <core:Item
                                                                id="idModelWeightUOM3"
                                                                key="G"
                                                                text="Grams"
                                                            />

                                                            <!-- Add more UOM options as needed -->
                                                        </items>
                                                    </Select>
                                                </HBox>
                                                <HBox id="idHBoxForModelStack">
                                                    <Label
                                                        id="idLablelForModelStack"
                                                        text="Stack Level:"
                                                        width="125px"
                                                        class="sapUiTinyMarginTop"
                                                    />
                                                    <Input
                                                        id="idInputForModelStack"
                                                        value="{CombinedModel>/Product/stack}"
                                                        placeholder="Enter Stack Levels"
                                                        class="customInput"
                                                        width="100%"
                                                        maxLength="200"
                                                    />
                                                </HBox>
                                                <HBox
                                                    id="buttonsHbox_productList"
                                                    class="sapUiSmallMarginTop"
                                                >
                                                    <Button
                                                        id="idBtnForModelClear"
                                                        text="Clear"
                                                        press="onClearProduct"
                                                        type="Emphasized"
                                                        class="dialogButton_sapconnect addProductSaveButton sapUiMediumMarginEnd"
                                                    />

                                                    <Button
                                                        id="idBtnForModelSave"
                                                        text="Save"
                                                        press="onCreateProduct"
                                                        type="Emphasized"
                                                        class="dialogButton_sapconnect addProductSaveButton"
                                                    />
                                                </HBox>
                                            </VBox>
                                        </form:SimpleForm>
                                    </HBox>
                                </IconTabFilter>
                                <!-- Conatiner Details -->
                                <IconTabFilter
                                    id="idIconTabForContainerDetails"
                                    visible="true"
                                    key="info"
                                    icon="sap-icon://shipping-status"
                                    interactionMode="Auto"
                                    iconColor="Neutral"
                                    text="Container Details"
                                    class="backgroundColour"
                                >
                                    <VBox
                                        id="idVBoxForContainers"
                                        width="80%"
                                    >
                                        <smartfilterbar:SmartFilterBar
                                            id="idSmarFilterContainerForContainers"
                                            filterBarExpanded="true"
                                            entitySet="TruckTypes"
                                        >
                                            <smartfilterbar:controlConfiguration
                                            >
                                                <smartfilterbar:ControlConfiguration
                                                    id="idForTruckTypeCon"
                                                    key="truckType"
                                                    visibleInAdvancedArea="true"
                                                    label="TruckTpe"
                                                />
                                                <smartfilterbar:ControlConfiguration
                                                    id="idForTruckCap"
                                                    key="capacity"
                                                    visibleInAdvancedArea="true"
                                                    label="Truck Capacity"
                                                />
                                            </smartfilterbar:controlConfiguration>
                                        </smartfilterbar:SmartFilterBar>
                                        <smarttable:SmartTable
                                            id="idSmartTableForContainer"
                                            smartFilterId="idSmarFilterContainerForContainers"
                                            entitySet="TruckTypes"
                                            headerLevel="H6"
                                            header="Containers"
                                            showRowCount="false"
                                            showFullScreenButton="true"
                                            enableAutoBinding="true"
                                            enableExport="true"
                                            tableType="ResponsiveTable"
                                        >
                                            <smarttable:customToolbar>
                                                <OverflowToolbar
                                                    id="idOverFlowForConatiners"
                                                >
                                                    <ToolbarSpacer
                                                        id="idToolbarForContainers"
                                                    />
                                                    <MenuButton
                                                        id="idContainerMenuBtn"
                                                        text="Actions"
                                                    >
                                                        <menu>
                                                            <Menu
                                                                id="idContainerlMenu"
                                                                itemSelected="onMenuAction"
                                                            >
                                                                <MenuItem
                                                                    id="idContainerCreateBtn"
                                                                    text="Create"
                                                                    icon="sap-icon://create"
                                                                    press="onContainerCreate"
                                                                />
                                                                <MenuItem
                                                                    id="idContainerEditBtn"
                                                                    text="Edit"
                                                                    icon="sap-icon://edit"
                                                                    press="onContainerEditPress"
                                                                />
                                                                <MenuItem
                                                                    id="idContainerDeleteBtn"
                                                                    text="Delete"
                                                                    press="onContainerDelete"
                                                                    icon="sap-icon://delete"
                                                                />
                                                                <MenuItem
                                                                    id="idContainerUploadBtn"
                                                                    text="UpLoad"
                                                                    press="onContainerUpload"
                                                                    icon="sap-icon://upload"
                                                                />
                                                            </Menu>
                                                        </menu>
                                                    </MenuButton>
                                                </OverflowToolbar>
                                            </smarttable:customToolbar>
                                            <Table
                                                id="idContianersTable"
                                                mode="MultiSelect"
                                                noDataText="No Containers/Vehicles Available"
                                                selectionChange="onTruckTypeChange"
                                            />
                                        </smarttable:SmartTable>
                                    </VBox>
                                </IconTabFilter>
                            </items>
                        </IconTabBar>
                    </ScrollContainer>
                    <!-- Simulation new -->
                    <ScrollContainer
                        id="idScollContainerForSimulation"
                        horizontal="false"
                        vertical="true"
                        height="100%"
                        width="100%"
                        class="sapUiContentPadding"
                    >
                        <IconTabBar
                            expanded="true"
                            expandable="false"
                            id="IconTabBarForSimulationHistory"
                            backgroundDesign="Transparent"
                            class="sapUiTinyMargin"
                            select="onIconTabSelect"
                        >
                            <items>
                                <IconTabFilter
                                    id="idIconTabFilterForSimulationHistory"
                                    visible="true"
                                    key="info"
                                    interactionMode="Auto"
                                    icon="sap-icon://history"
                                    iconColor="Neutral"
                                    text="Previous Simulations"
                                    class="sapUiTinyMargin"
                                >
                                    <Text
                                        id="idList2"
                                        text="Previous Simulations"
                                    />
                                    <VBox id="idVBoxForPreviousSimulation">
                                        <smartfilterbar:SmartFilterBar
                                            id="idSmarFilterContainerFor_previous_simulation"
                                            filterBarExpanded="true"
                                            entitySet="History"
                                        >
                                            <smartfilterbar:controlConfiguration
                                            >
                                                <smartfilterbar:ControlConfiguration
                                                    id="idFor_simulation_name"
                                                    key="simulationName_ID"
                                                    visibleInAdvancedArea="true"
                                                    label="Simulation Name"
                                                />
                                                <!-- <smartfilterbar:ControlConfiguration
                                                    id="idForTruckCap"
                                                    key="capacity"
                                                    visibleInAdvancedArea="true"
                                                    label="Truck Capacity"
                                                /> -->
                                            </smartfilterbar:controlConfiguration>
                                        </smartfilterbar:SmartFilterBar>
                                        <smarttable:SmartTable
                                            id="idSmartTableFor_previous_simulation"
                                            smartFilterId="idSmarFilterContainerFor_previous_simulation"
                                            entitySet="History"
                                            headerLevel="H6"
                                            header="Previous Simulation"
                                            showRowCount="false"
                                            showFullScreenButton="true"
                                            enableAutoBinding="true"
                                            enableExport="true"
                                            tableType="ResponsiveTable"
                                        >
                                            <smarttable:customToolbar>
                                                <OverflowToolbar
                                                    id="idOverFlowFor_previous_simulation"
                                                >
                                                    <ToolbarSpacer
                                                        id="idToolbarFor_previous_simulation"
                                                    />
                                                    <!-- <Button
                                                        id="idContainerCreateBtn"
                                                        text="Create"
                                                        icon="sap-icon://create"
                                                        width="100px"
                                                        type="Accept"
                                                        press="onContainerCreate"
                                                    />
                                                    <Button
                                                        id="idContainerEditBtn"
                                                        text="Edit"
                                                        icon="sap-icon://edit"
                                                        width="100px"
                                                        type="Emphasized"
                                                    />
                                                    <Button
                                                        id="idContainerDeleteBtn"
                                                        text="Delete"
                                                        press="onContainerDelete"
                                                        icon="sap-icon://delete"
                                                        width="100px"
                                                        type="Negative"
                                                    /> -->
                                                </OverflowToolbar>
                                            </smarttable:customToolbar>
                                            <Table
                                                id="id_previous_simulation_table"
                                                mode="MultiSelect"
                                                noDataText="No Previous Simulation "
                                                selectionChange="onTruckTypeChange"
                                            />
                                        </smarttable:SmartTable>
                                    </VBox>
                                </IconTabFilter>
                                <IconTabFilter
                                    id="idIconTabFilterForCreateSimulation"
                                    visible="true"
                                    key="createSimulation"
                                    icon="sap-icon://create-form"
                                    interactionMode="Auto"
                                    iconColor="Neutral"
                                    text="Create Simulation"
                                    textDirection="Inherit"
                                    class="sapUiTinyMargin"
                                >
                                    <Text
                                        id="idList4"
                                        text="Create Simulations"
                                    />
                                </IconTabFilter>
                            </items>
                        </IconTabBar>
                    </ScrollContainer>
                </pages>
            </NavContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
